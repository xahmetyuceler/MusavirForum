

@using MüşavirForum.Models;
@{
    ViewBag.Title = "Konular";
    IEnumerable<Topic> Tpc = ViewData["Topics"] as IEnumerable<Topic>;
}


<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="~/Content/assest/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assest/css/main.css">
    <link rel="stylesheet" href="~/Content/assest/css/forum.css">
    <link rel="preconnect" href="http://fonts.googleapis.com">
    <link rel="preconnect" href="http://fonts.gstatic.com" crossorigin>
    <link href="~/Content/assest/fonts/fontgoogle1.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Zirve Müşavir Forum</title>
</head>
<body>
    @RenderPage("~/Views/Shared/_Header.cshtml")
    <div class="in2"></div>


    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <div class="container">
        <div class="main-body p-0">
            <div class="inner-wrapper">
                <!-- Inner sidebar -->
                <div class="inner-sidebar">
                    <!-- Inner sidebar header -->
                    <div class="inner-sidebar-header justify-content-center">
                        <button class="btn btn-primary has-icon btn-block" type="button" data-toggle="modal" data-target="#threadModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus mr-2">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            Yeni Konu
                        </button>
                    </div>
                    <!-- /Inner sidebar header -->
                    <!-- Inner sidebar body -->
                    <div class="inner-sidebar-body p-0">
                        <div class="p-3 h-100" data-simplebar="init">
                            <div class="simplebar-wrapper" style="margin: -16px;">
                                <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div>
                                <div class="simplebar-mask">
                                    <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                        <div class="simplebar-content-wrapper" style="height: 100%;">
                                            <div class="simplebar-content" style="padding: 16px;">
                                                <nav class="nav nav-pills nav-gap-y-1 flex-column">
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon active">Tüm Konular</a>
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon">En Popüler Konular</a>
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon">En Son Yayınlananlar</a>
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon">En Cok Begeni Alanlar</a>
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon">En Cok Yorum Alanlar</a>
                                                    <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon">İşaretlenmiş Sorunlar</a>
                                                </nav>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="simplebar-placeholder" style="width: 234px; height: 292px;"></div>
                            </div>
                            <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div>
                            <div class="simplebar-track simplebar-vertical" style="visibility: visible;"><div class="simplebar-scrollbar" style="height: 151px; display: block; transform: translate3d(0px, 0px, 0px);"></div></div>
                        </div>
                    </div>
                    <!-- /Inner sidebar body -->
                </div>
                <!-- /Inner sidebar -->
                <!-- Inner main -->
                <div class="inner-main">
                    <!-- Inner main header -->
                    <div class="inner-main-header">
                        <a class="nav-link nav-icon rounded-circle nav-link-faded mr-3 d-md-none" href="#" data-toggle="inner-sidebar"><i class="material-icons">arrow_forward_ios</i></a>
                        <select class="custom-select custom-select-sm w-auto mr-1">
                            <option selected="">En Son</option>
                            <option value="1">Popüler</option>
                            <option value="3">Cözüldü</option>
                            <option value="3">Cüzülmemiş</option>
                            <option value="3">Henüz Cevaplanmamış</option>
                        </select>

                    </div>
                    <!-- /Inner main header -->
                    <!-- Inner main body -->
                    <!-- Forum List -->


                 
                    <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">


                        @foreach (Topic t in Tpc)
                        {

                            <div class="card mb-2">
                                <div class="card-body p-2 p-sm-3">
                                    <div class="media forum-item">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <a href="#" data-toggle="collapse" data-target=".forum-content"><img src="http://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="50" alt="User" /></a>
                                                </div>
                                                <div class="col-md-9" style="margin-top: 5px;">
                                                    <h7><a href="#" data-toggle="collapse" data-target=".forum-content" class="text-body">Müşavir Destek Nedir?</a></h7>
                                                    <p class="text-muted" style="font-size: 12px;"><a href="javascript:void(0)">Ahmet Yüceler</a> tarafından <span class="text-secondary font-weight-bold">13 dakika önce</span></p>
                                                </div>
                                                <div class="col-md-2" style="">
                                                    <div class="text-muted small text-center align-self-center" style="    margin-top: 13px;
                                            margin-left: 69px;">
                                                        <span class="d-none d-sm-inline-block"><i class="far fa-heart"></i> 19</span>
                                                        <span><i class="far fa-comment ml-2"></i> 3</span>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>


                        }















                        <ul class="pagination pagination-sm pagination-circle justify-content-center mb-0">
                            <li class="page-item disabled">
                                <span class="page-link has-icon"><i class="material-icons">Geri</i></span>
                            </li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0)">1</a></li>
                            <li class="page-item active"><span class="page-link">2</span></li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0)">3</a></li>
                            <li class="page-item">
                                <a class="page-link has-icon" href="javascript:void(0)"><i class="material-icons">İleri</i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /Inner main -->
            </div>

        </div>
    </div>


    <div class="in8"></div>

    </div>
    </div>
    @RenderPage("~/Views/Shared/_footer.cshtml")
</body>

<script src="~/Content/assest/js/bootstrap.bundle.min.js"></script>
</html>