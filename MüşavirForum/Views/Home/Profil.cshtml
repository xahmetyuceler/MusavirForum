<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="~/Content/assest/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assest/css/main.css">
    <link rel="preconnect" href="http://fonts.googleapis.com">
    <link rel="preconnect" href="http://fonts.gstatic.com" crossorigin>
    <link href="~/Content/assest/fonts/fontgoogle1.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Zirve Müşavir Forum</title>
</head>
<body>
    @RenderPage("~/Views/Shared/_Header.cshtml")

    <div class="container bootstrap snippets bootdey profilduzenle">
        <h1 class="text-primary"><span class="glyphicon glyphicon-user"></span>Profili Düzenle</h1>
        <hr>
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="~/Content/assest/img/100.png" class="avatar img-circle" alt="avatar">
                    <h6>Fotoğraf Yükle.</h6>

                    <input type="file" class="form-control"><br>
                    <button type="submit" class="btn btn-success">Yükle</button><br><br>
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-5 personal-info">
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">×</a>
                    <i class="fa fa-coffee"></i>
                    Bu bir <strong>.uyarı</strong> Kullanıcıya önemli mesajları göstermek için bunu kullanın.
                </div>
                <h3>Kişisel bilgi</h3>

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Adı:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Soyadı:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Şirket:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Mail Adresi:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="ornek@ornek.com">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Ünvan:</label>
                        <div class="col-lg-8">
                            <div class="ui-select">
                                <select id="user_time_zone" class="form-control">
                                    <option value="LÜTFEN SECİN">SEÇİM YAPIN</option>
                                    <option value="Müşavir">Müşavir</option>
                                    <option value="Ticari">Ticari</option>
                                    <option value="Finansman">Finansman</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Deneme">Deneme</option>
                                </select>
                            </div>
                        </div>
                    </div>
            </div>

            <!-- Şifre Kısmı başlangıc  -->
            <div class="col-sm-4 passup">

                <label>Eski Şifre</label>
                <div class="form-group pass_show">
                    <input type="password" value="faisalkhan@123" class="form-control" placeholder="Current Password">
                </div>
                <label>Yeni Şifre</label>
                <div class="form-group pass_show">
                    <input type="password" value="faisal.khan@123" class="form-control" placeholder="New Password">
                </div>
                <label>Yeni Şifre Tekrar</label>
                <div class="form-group pass_show">
                    <input type="password" value="faisal.khan@123" class="form-control" placeholder="Confirm Password">
                </div><br><br>
                <button type="submit" class="btn btn-success">Düzenlemeyi Kaydet</button></center>

            </div>
            <!-- Şifre Kısmı Bitiş -->
        </div>
        </form>
    </div>


    @RenderPage("~/Views/Shared/_footer.cshtml")
</body>
<script type="text/javascript">

$(document).ready(function(){
$('.pass_show').append('<span class="ptxt">Show</span>');
});


$(document).on('click','.pass_show .ptxt', function(){

$(this).text($(this).text() == "Show" ? "Hide" : "Show");

$(this).prev().attr('type', function(index, attr){return attr == 'password' ? 'text' : 'password'; });

});
</script>
<script src="~/Content/assest/js/bootstrap.bundle.min.js"></script>
</html>